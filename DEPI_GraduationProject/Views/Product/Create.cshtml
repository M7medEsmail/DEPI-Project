@using DEPI_GraduationProject.ViewModels
@model ProductViewModel

@{
    var brands = ViewBag.Brands != null ? new SelectList(ViewBag.Brands, "Id", "Name") : new SelectList(Enumerable.Empty<SelectListItem>());
    var types = ViewBag.Types != null ? new SelectList(ViewBag.Types, "Id", "Name") : new SelectList(Enumerable.Empty<SelectListItem>());
}

@if (User.IsInRole("Admin"))
{

    <h1>Create New Product</h1>

    <h4>Product Information</h4>
    <hr />
    <div class="row">
        <div class="col-md-7">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Name -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PictureUrl" class="form-label">Upload Product Image</label>
                    <input asp-for="PictureUrl" class="form-control-file" type="file" required />
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>


                <!-- Stock -->
                <div class="form-group mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" type="number" placeholder="Enter stock quantity" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <!-- Product Brand -->
                <div class="form-group mb-3">
                    <label asp-for="ProductBrandId" class="form-label"></label>
                    <select asp-for="ProductBrandId" class="form-control" asp-items="brands">
                        <option value="">-- Select Brand --</option>
                    </select>
                    <span asp-validation-for="ProductBrandId" class="text-danger"></span>
                </div>

                <!-- Product Type -->
                <div class="form-group mb-3">
                    <label asp-for="ProductTypeId" class="form-label"></label>
                    <select asp-for="ProductTypeId" class="form-control" asp-items="types">
                        <option value="">-- Select Type --</option>
                    </select>
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}